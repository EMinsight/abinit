 tolvrs 1.d-8
 nstep  50

!XC used
 ixc         11

!bands
 nband     4
 
! 2D Beigi CUT-OFF
  icutcoul     2
  vcutgeo      1 1 0

 pp_dirpath "$ABI_PSPDIR/Pseudodojo_nc_sr_04_pw_standard_psp8"
 pseudos    "B.psp8, N.psp8"

